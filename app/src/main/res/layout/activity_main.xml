<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:theme="@style/NoTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kevin_quang.acertainimageeditor.MainActivity"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <fragment
            android:id="@+id/mainEditor"
            android:name="kevin_quang.acertainimageeditor.EditFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            />
        <LinearLayout
            android:id="@+id/menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <android.support.design.widget.TabLayout
                android:id="@+id/sliding_tabs"
                style="@style/TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                android:background="#020204"/>

            <kevin_quang.acertainimageeditor.StaticViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#020204" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:indeterminateDrawable="@xml/progressbar"
        >
    </ProgressBar>
</RelativeLayout>