<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/load_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <ImageButton
        android:id="@+id/camera"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_photo_camera_white_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/photo_gallery"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_photo_library_white_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/save"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_save_white_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/share"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_share_white_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>